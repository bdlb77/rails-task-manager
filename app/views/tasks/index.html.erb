<h1>The Task List</h1>
<% @tasks.each do |task| %>
 <%= task.completed? ? "<input type='checkbox'>" : "<input type='checkbox' checked>" %>
	<h2><%= link_to task.title, task_path(task)%></h2>
	<%= link_to "Delete Task", task_path(task), method: :delete%>
<% end %>

<p><%= link_to "Create Task", new_task_path %></p>